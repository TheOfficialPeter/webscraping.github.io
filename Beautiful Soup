import requests
from bs4 import BeautifulSoup as bs

r = requests.get("http://books.toscrape.com")

sourceCode = r.text

soup = bs(sourceCode, 'html.parser')

prices = []
pricesIndexes = []
foundPrices = soup.find_all(class_="price_color")

for bookNum in range(len(foundPrices)):
    prices.append(foundPrices[bookNum].text[2:])
    pricesIndexes.append(bookNum)

plt.plot(prices, pricesIndexes)
plt.show()
